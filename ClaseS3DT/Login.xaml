<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaseS3DT.Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Formulario de LOGIN" HorizontalOptions="Center" TextColor="Black" FontSize="20"/>
            <Image Source="https://jorzgz0iptpc.cdn.shift8web.com/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Text="Usuario" FontSize="18" Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="Center"/>
                <Entry x:Name="txtUsuario" Placeholder="Ingresar usuario" Grid.Row="0" Grid.Column="1"/>
                <Label Text="Contraseña" FontSize="18" Grid.Row="1" Grid.Column="0" HorizontalTextAlignment="Center"/>
                <Entry x:Name="txtPass" Placeholder="Ingresar contraseña" IsPassword="True" Grid.Row="1" Grid.Column="1"/>

            </Grid>
            <Button x:Name="btnLogin" Clicked="btnLogin_Clicked" Text="Iniciar Sesión"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>